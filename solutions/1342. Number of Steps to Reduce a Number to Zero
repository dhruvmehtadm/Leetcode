#python solution
class Solution:
    def numberOfSteps(self, num: int) -> int:
        count = 0
        while(num!=0):
            if(num%2==0):
                num=num/2
            else:
                num-=1
            count+=1
        return count

#c++ solution
class Solution {
public:
    int numberOfSteps(int num) {
        int count = 0;
        while(num!=0){
            if(num%2==0){
                num=num/2;
            }
            else{
                num-=1;
            }
            count+=1;
            }
        return count;
    }
};
